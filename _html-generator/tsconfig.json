{
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "compilerOptions": {
    "target": "ES2020",
    "module": "AMD",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": false,
    "sourceMap": false,
    "downlevelIteration": false,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outFile": "./generator.js"
  },
  "files": [
    "libraries.ts",
    "operationsOnFiles.ts",
    "startFilesAnalyzer.ts",
    "generator.ts",
    "init.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}